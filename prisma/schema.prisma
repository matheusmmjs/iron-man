generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  cpf         String  @id // CPF como chave primária
  name        String
  email       String  @unique
  phone       String? // Número de telefone (opcional)
  address     String? // Endereço (opcional)
  birthDate   DateTime? // Data de nascimento (opcional)
  isActive    Boolean @default(true) // Indica se o cliente está ativo
}