generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Company {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  users       User[]
  clients     Client[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("USER")
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  active    Boolean  @default(true)

  @@index([companyId])
}

model Client {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  phone         String?
  dateOfBirth   DateTime?
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id])

  @@index([companyId])
} 