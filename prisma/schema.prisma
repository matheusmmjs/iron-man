generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  cnpj     String  @id
  name     String
  email    String  @unique
  phone    String
  address  String
  isActive Boolean @default(true)
  User     User[]
}

model User {
  cpf       String   @id
  name      String
  email     String   @unique
  phone     String
  address   String
  birthDate DateTime
  isActive  Boolean  @default(true)
  jobTitle  String?
  companyId String
  company   Company  @relation(fields: [companyId], references: [cnpj])
}

model Client {
  cpf       String   @id
  name      String
  email     String   @unique
  phone     String
  address   String
  birthDate DateTime
  isActive  Boolean  @default(true)
}
